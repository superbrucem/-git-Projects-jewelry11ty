<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Categories toggle functionality
        const categoryToggles = document.querySelectorAll('.category-toggle');

        categoryToggles.forEach(toggle => {
            toggle.addEventListener('click', function(e) {
                e.preventDefault();
                const categoryId = this.getAttribute('data-category');
                const subcategoriesEl = document.getElementById(`subcategories-${categoryId}`);
                const chevron = this.querySelector('.category-chevron');

                // Add active state to the current category
                toggle.classList.toggle('active-category');

                // Toggle subcategories with smooth slide animation
                if (subcategoriesEl.classList.contains('hidden')) {
                    subcategoriesEl.classList.remove('hidden');
                    subcategoriesEl.style.maxHeight = '0';
                    setTimeout(() => {
                        subcategoriesEl.style.maxHeight = subcategoriesEl.scrollHeight + 'px';
                    }, 10);
                    // Rotate chevron when expanded
                    chevron.style.transform = 'rotate(90deg)';
                } else {
                    subcategoriesEl.style.maxHeight = '0';
                    // Wait for animation to complete before hiding
                    setTimeout(() => {
                        subcategoriesEl.classList.add('hidden');
                    }, 300); // Match this with the CSS transition duration
                    // Rotate chevron back
                    chevron.style.transform = 'rotate(0deg)';
                }
            });
        });
    });
</script>
