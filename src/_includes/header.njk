                .shop-name-container {
                    position: relative;
                    padding: 0 4px;
                    border-radius: 2px;
                    overflow: hidden;
                }

                .shop-name-container::after {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    right: 0;
                    bottom: 0;
                    background: linear-gradient(90deg,
                        rgba(255,255,255,0) 0%,
                        rgba(100,255,100,0.12) 50%,
                        rgba(255,215,0,0.08) 75%,
                        rgba(255,255,255,0) 100%);
                    background-size: 200% 100%;
                    animation: shimmer-gradient 16s steps(30) infinite;
                    z-index: -1;
                }

                .animate-shimmer {
                    animation: color-cycle 16s infinite steps(30);
                    position: relative;
                    z-index: 1;
                    font-weight: 700;
                    letter-spacing: 0.05em;
                }

                .animate-opal-left {
                    animation: opal-pulse-left 4s infinite ease-in-out;
                    display: inline-block;
                    font-size: 1.1em;
                }

                .animate-opal-right {
                    animation: opal-pulse-right 4s infinite ease-in-out;
                    animation-delay: 2s;
                    display: inline-block;
                    font-size: 1.1em;
                }

                .animate-glow {
                    animation: glow 16s infinite ease-in-out;
                    color: white;
                }

                /* Diamond sparkle effects */
                @keyframes sparkle {
                    0%, 100% { opacity: 0; transform: scale(0) rotate(0deg); }
                    20% { opacity: 0; transform: scale(0) rotate(0deg); }
                    50% { opacity: 1; transform: scale(1) rotate(45deg); }
                    80% { opacity: 0; transform: scale(0) rotate(90deg); }
                }

                @keyframes twinkle {
                    0%, 100% { opacity: 0; transform: translate(-50%, -50%) scale(0); box-shadow: 0 0 0 0 rgba(255,255,255,0); }
                    50% { opacity: 1; transform: translate(-50%, -50%) scale(1); box-shadow: 0 0 10px 2px rgba(255,255,255,0.8), 0 0 15px 4px rgba(16,185,129,0.6), 0 0 20px 6px rgba(14,165,233,0.5); }
                }

                .opal-container {
                    position: relative;
                    display: inline-block;
                }

                .opal-circle {
                    display: inline-block;
                    background: linear-gradient(135deg, #4ade80, #10b981, #0ea5e9, #0891b2);
                    border-radius: 50%;
                    box-shadow: 0 0 10px rgba(16, 185, 129, 0.5), 0 0 15px rgba(8, 145, 178, 0.4);
                    position: relative;
                    z-index: 1;
                }

                .sparkle-1, .sparkle-2, .sparkle-3, .sparkle-4, .sparkle-5, .sparkle-6 {
                    position: absolute;
                    background: white;
                    border-radius: 50%;
                    box-shadow: 0 0 4px 1px rgba(255, 255, 255, 0.8), 0 0 8px 2px rgba(14, 165, 233, 0.5);
                    opacity: 0;
                }

                .sparkle-1 {
                    width: 3px;
                    height: 3px;
                    top: -2px;
                    left: 30%;
                    animation: sparkle 4s infinite ease-out;
                }

                .sparkle-2 {
                    width: 2px;
                    height: 2px;
                    bottom: -2px;
                    right: 30%;
                    animation: sparkle 4s infinite ease-out 1s;
                }

                .sparkle-3 {
                    width: 2px;
