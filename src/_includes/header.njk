            <style>
                @keyframes glow {
                    0% { opacity: 0; text-shadow: none; }
                    45% { opacity: 0; text-shadow: none; }
                    50% { opacity: 0.8; text-shadow: 0 0 15px rgba(100, 255, 100, 0.9), 0 0 25px rgba(150, 255, 150, 0.5); } /* Sharper green */
                    55% { opacity: 0; text-shadow: none; }
                    70% { opacity: 0; text-shadow: none; }
                    75% { opacity: 0.7; text-shadow: 0 0 15px rgba(255, 215, 0, 0.8), 0 0 25px rgba(255, 255, 255, 0.4); } /* Gold */
                    80% { opacity: 0; text-shadow: none; }
                    100% { opacity: 0; text-shadow: none; }
                }

                @keyframes opal-pulse-left {
                    0% { transform: scale(1); opacity: 1; color: #4ade80; }
                    25% { transform: scale(1.1); opacity: 0.95; color: #0ea5e9; text-shadow: 0 0 10px rgba(14, 165, 233, 0.7); }
                    50% { transform: scale(1.2); opacity: 0.9; color: #10b981; text-shadow: 0 0 10px rgba(16, 185, 129, 0.7); }
