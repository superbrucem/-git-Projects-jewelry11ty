                    100% { transform: scale(1); opacity: 1; color: #4ade80; }
                }

                @keyframes opal-pulse-right {
                    0% { transform: scale(1); opacity: 1; color: #4ade80; }
                    25% { transform: scale(1.1); opacity: 0.95; color: #0891b2; text-shadow: 0 0 10px rgba(8, 145, 178, 0.7); }
