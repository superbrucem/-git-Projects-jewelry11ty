                    75% { transform: scale(1.1); opacity: 0.95; color: #0ea5e9; text-shadow: 0 0 10px rgba(14, 165, 233, 0.7); }
                    100% { transform: scale(1); opacity: 1; color: #4ade80; }
                }

                @keyframes shimmer-gradient {
                    0% { background-position: 0% center; }
                    100% { background-position: 200% center; }
                }

                @keyframes color-cycle {
                    0%, 100% { color: #ffffff; text-shadow: 0 0 10px rgba(255, 255, 255, 0.7), 0 0 20px rgba(255, 255, 255, 0.3); }
                    50% { color: #d0ffd0; text-shadow: 0 0 10px rgba(100, 255, 100, 0.8), 0 0 20px rgba(150, 255, 150, 0.4); } /* Sharper green */
